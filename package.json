{
  "name": "@bird-studio/js-config",
  "version": "1.0.0",
  "description": "config files",
  "keywords": [
    "config",
    "conventional-commits",
    "conventional",
    "conventional changelog",
    "semantic-version",
    "semantic-release"
  ],
  "homepage": "https://github.com/bird-studio/js-config",
  "repository": "bird-studio/js-config",
  "license": "MIT",
  "author": "akira-toriyama",
  "main": "lib/opt/index.js",
  "files": [
    "/lib",
    "README.md"
  ],
  "scripts": {
    "qualityCheck": "run-s qualityCheck:*",
    "qualityCheck:esLint": "eslint --ignore-path .gitignore .",
    "qualityCheck:fmt": "prettier  --check --ignore-path .gitignore .",
    "prepack": "yarn qualityCheck && rm -rf lib && tsc --project tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "prepare": "git config --local core.hooksPath .githooks"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@bird-studio/interactive-message": "1.0.2",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/npm": "8.0.2",
    "@typescript-eslint/eslint-plugin": "5.3.0",
    "@typescript-eslint/parser": "5.3.0",
    "conventional-changelog-conventionalcommits": "4.6.1",
    "eslint": "8.1.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-jest": "25.2.2",
    "jest": "27.3.1",
    "npm-run-all": "4.1.5",
    "prettier": "2.4.1",
    "semantic-release": "18.0.0"
  }
}
